{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",              
    "module": "es6",  
    "sourceMap": true,    
    "outDir": "./dist", 
    "types": [
      "babylonjs",
      "babylonjs-gui",
      "babylonjs-materials",
      "jest"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/appPlayCanvas.ts",
    "src/my-scene2.ts",
    "babylonChe.zip",
    "**/*.spec.js"
  ]
}
